@model List<TP4.EF.MVC.Models.ShippersView>

@{
    ViewBag.Title = "Shippers";
}

<h1>Shippers</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col"> Id Shipper   </th>
            <th scope="col"> Nombre de la compañía   </th>
            <th scope="col"> Teléfono </th>
            <th scope="col"> Editar </th>   
            <th scope="col"> Eliminar </th>
        </tr>
    </thead>
    @foreach (TP4.EF.MVC.Models.ShippersView shipperView in Model)
    {
        <tr>
            <td scope="row">  @shipperView.ShipperID   </td>
            <td scope="row">  @shipperView.CompanyName    </td>
            <td scope="row"> @shipperView.Phone </td>
            <td scope="row"> @Html.ActionLink("Editar shipper", "InsertUpdate", new TP4.EF.MVC.Models.ShippersView { ShipperID = shipperView.ShipperID, CompanyName = shipperView.CompanyName, Phone = shipperView.Phone, Modificar = "Mod" }, new { onclick = "return confirm('Está seguro de editar el shipper?')" }) </td>
            <td scope="row"> @Html.ActionLink("Eliminar shipper", "Delete", new { id = shipperView.ShipperID }, new { onclick = "return confirm('Está seguro de borrar el shipper?')" }) </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Insertar nuevo shipper", "InsertUpdate", "Shippers",
            new { @class = "btn btn-primary", role = "button" })
</div>

