@model IEnumerable<TP4.EF.MVC.Models.StarWarsCharacterView>

@{
    ViewBag.Title = "Star Wars API";
}

<h3>Consumo de Star Wars Api - categoría "people"  </h3>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mass)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mass)
        </td>
        
    </tr>
}

</table>
